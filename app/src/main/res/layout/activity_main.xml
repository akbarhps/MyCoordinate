<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGetLastLoc"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetLastLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_last_location"
        app:layout_constraintBottom_toTopOf="@+id/btnListenLocUpdates" />

    <Button
        android:id="@+id/btnListenLocUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listen_location_updates"
        app:layout_constraintBottom_toTopOf="@+id/btnRemoveLocUpdates" />

    <Button
        android:id="@+id/btnRemoveLocUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_location_updates"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>